    @* filepath: d:\Learning .net\WaktuSolat\WaktuSolat\Views\Home\Index.cshtml *@
    @model WaktuSolat.Models.WaktuSolatEntity
    
    @{
        ViewData["Title"] = "Waktu Solat";
        var allZones = ViewBag.AllZones as List<WaktuSolat.Models.ZoneGroup> ?? new List<WaktuSolat.Models.ZoneGroup>();
        var selectedZone = ViewBag.SelectedZone as string ?? "WLY01";
    }
    
    <!DOCTYPE html>
    <html lang="ms">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
    
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                min-height: 100vh;
                padding: 20px;
            }
    
            .container {
                max-width: 800px;
                margin: 0 auto;
                background: white;
                border-radius: 20px;
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
                padding: 40px;
            }
    
            h1 {
                text-align: center;
                color: #333;
                margin-bottom: 30px;
                font-size: 2.5em;
            }
    
            .zone-selector {
                margin-bottom: 30px;
            }
    
            .zone-selector label {
                display: block;
                font-weight: bold;
                margin-bottom: 10px;
                color: #555;
            }
    
            .zone-selector select {
                width: 100%;
                padding: 12px;
                font-size: 16px;
                border: 2px solid #ddd;
                border-radius: 8px;
                background: white;
                cursor: pointer;
                transition: border-color 0.3s;
            }
    
            .zone-selector select:hover {
                border-color: #667eea;
            }
    
            .zone-selector select:focus {
                outline: none;
                border-color: #764ba2;
            }
    
            .zone-info {
                background: #f8f9fa;
                padding: 20px;
                border-radius: 12px;
                margin-bottom: 30px;
            }
    
            .zone-info h2 {
                color: #667eea;
                margin-bottom: 10px;
            }
    
            .zone-info p {
                color: #666;
                margin: 5px 0;
            }
    
            .prayer-times {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 20px;
                margin-bottom: 20px;
            }
    
            .prayer-time {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                padding: 20px;
                border-radius: 12px;
                text-align: center;
                color: white;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s;
            }
    
            .prayer-time:hover {
                transform: translateY(-5px);
            }
    
            .prayer-name {
                font-size: 1.2em;
                font-weight: bold;
                margin-bottom: 10px;
            }
    
            .prayer-value {
                font-size: 2em;
                font-weight: bold;
            }
    
            .error {
                background: #fee;
                color: #c33;
                padding: 15px;
                border-radius: 8px;
                text-align: center;
                margin-bottom: 20px;
            }
    
            .dates {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 20px;
                margin-bottom: 20px;
            }
    
            .date-card {
                background: #f8f9fa;
                padding: 15px;
                border-radius: 8px;
                text-align: center;
            }
    
            .date-card strong {
                display: block;
                color: #667eea;
                margin-bottom: 8px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>ðŸ•Œ Waktu Solat</h1>
    
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="error">
                    <strong>Error:</strong> @ViewBag.Error
                </div>
            }
    
            <div class="zone-selector">
                <label for="zoneSelect">Pilih Zon:</label>
                <select id="zoneSelect" onchange="changeZone()">
                    <option value="">-- Pilih Zon --</option>
                    @foreach (var group in allZones)
                    {
                        <optgroup label="@group.State">
                            @foreach (var zone in group.Zones)
                            {
                                <option value="@zone.Value" @(zone.Value == selectedZone ? "selected" : "")>
                                    @zone.Text
                                </option>
                            }
                        </optgroup>
                    }
                </select>
            </div>
    
            @if (Model != null)
            {
                <div class="zone-info">
                    <h2>@Model.czone (@Model.cbearing)</h2>
                </div>
    
                <div class="dates">
                    <div class="date-card">
                        <strong>ðŸ“… Tarikh Masehi</strong>
                        @Model.TarikhMasehi
                    </div>
                    <div class="date-card">
                        <strong>ðŸŒ™ Tarikh Hijrah</strong>
                        @Model.TarikhHijrah
                    </div>
                </div>
    
                <div class="prayer-times">
                    <div class="prayer-time">
                        <div class="prayer-name">Imsak</div>
                        <div class="prayer-value">@Model.Imsak</div>
                    </div>
                    <div class="prayer-time">
                        <div class="prayer-name">Subuh</div>
                        <div class="prayer-value">@Model.Subuh</div>
                    </div>
                    <div class="prayer-time">
                        <div class="prayer-name">Syuruk</div>
                        <div class="prayer-value">@Model.Syuruk</div>
                    </div>
                    <div class="prayer-time">
                        <div class="prayer-name">Dhuha</div>
                        <div class="prayer-value">@Model.Dhuha</div>
                    </div>
                    <div class="prayer-time">
                        <div class="prayer-name">Zohor</div>
                        <div class="prayer-value">@Model.Zohor</div>
                    </div>
                    <div class="prayer-time">
                        <div class="prayer-name">Asar</div>
                        <div class="prayer-value">@Model.Asar</div>
                    </div>
                    <div class="prayer-time">
                        <div class="prayer-name">Maghrib</div>
                        <div class="prayer-value">@Model.Maghrib</div>
                    </div>
                    <div class="prayer-time">
                        <div class="prayer-name">Isyak</div>
                        <div class="prayer-value">@Model.Isyak</div>
                    </div>
                </div>
            }
        </div>
    
        <script>
            function changeZone() {
                const select = document.getElementById('zoneSelect');
                const selectedZone = select.value;
                
                if (selectedZone) {
                    window.location.href = `/?zone=${selectedZone}`;
                }
            }
        </script>
    </body>
    </html>